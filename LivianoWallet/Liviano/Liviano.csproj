<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;netcoreapp2.1;netcoreapp3.1</TargetFrameworks>
        <Version>0.1</Version>
        <AssemblyVersion>0.1.0</AssemblyVersion>
        <FileVersion>0.1.0</FileVersion>
        <Company>HodlWallet</Company>
        <LangVersion>8.0</LangVersion>
        <Description>Liviano is a library to build Bitcoin light clients</Description>
        <Copyright>HodlWallet</Copyright>
    </PropertyGroup>
    <ItemGroup>
        <ProjectReference Include="..\Liviano.Utilities\Liviano.Utilities.csproj" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Easy.MessageHub" Version="5.0.0" />
        <PackageReference Include="NBitcoin" Version="5.0.54" />
        <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
        <PackageReference Include="serilog" Version="2.9.0" />
    </ItemGroup>
    <ItemGroup>
        <Folder Include="Electrum\" />
        <Folder Include="Electrum\servers\" />
        <Folder Include="Extensions\" />
        <Folder Include="Interfaces\" />
        <Folder Include="Models\" />
        <Folder Include="Bips\" />
        <Folder Include="Accounts\" />
        <Folder Include="Storages\" />
    </ItemGroup>
    <ItemGroup>
        <None Remove="Electrum\btc-servers.json" />
        <None Remove="Electrum\servers\main.json" />
        <None Remove="Electrum\servers\regtest.json" />
        <None Remove="Electrum\servers\testnet.json" />
    </ItemGroup>
    <ItemGroup>
        <None Update="Electrum\servers\servers.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Electrum\servers\servers_testnet.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>
    <ItemGroup>
      <Content Include="Electrum\servers\main.json">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
      <Content Include="Electrum\servers\regtest.json">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
      <Content Include="Electrum\servers\testnet.json">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
    </ItemGroup>
</Project>
