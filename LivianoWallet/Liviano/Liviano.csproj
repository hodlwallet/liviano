<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netcoreapp2.1</TargetFrameworks>
    <Version>0.1</Version>
    <AssemblyVersion>0.1.0</AssemblyVersion>
    <FileVersion>0.1.0</FileVersion>
    <Company>HodlWallet</Company>
    <Description>Liviano is a library to build Bitcoin light clients</Description>
    <Copyright>HodlWallet</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Liviano.Utilities\Liviano.Utilities.csproj" />
    <ProjectReference Include="..\..\NBitcoin\NBitcoin\NBitcoin.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(BuildingInsideVisualStudio)' == 'true'">
    <ProjectReference Include="..\..\NBitcoin\NBitcoin\NBitcoin.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Models\Wallet.cs">
      <Generator>e</Generator>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Easy.MessageHub" Version="3.4.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
    <PackageReference Include="serilog" Version="2.7.1" />
  </ItemGroup>
 

  <ItemGroup Condition="'$(BuildingInsideVisualStudio)' != 'true'">
    <PackageReference Include="NBitcoin" Version="4.1.1.72" />
  </ItemGroup>
</Project>
