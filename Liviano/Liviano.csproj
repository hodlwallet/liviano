<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;netstandard2.0;netcoreapp3.1;net5.0</TargetFrameworks>
        <Version>0.1</Version>
        <AssemblyVersion>0.1.0</AssemblyVersion>
        <FileVersion>0.1.0</FileVersion>
        <Company>HodlWallet</Company>
        <Description>Liviano is a library to build Bitcoin light clients</Description>
        <LangVersion>latest</LangVersion>
        <Copyright>HodlWallet</Copyright>
    </PropertyGroup>
    <ItemGroup>
        <ProjectReference Include="..\Liviano.Utilities\Liviano.Utilities.csproj" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="NBitcoin" Version="5.0.75" />
        <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
        <PackageReference Include="serilog" Version="2.10.0" />
    </ItemGroup>
    <ItemGroup>
        <Folder Include="Electrum\" />
        <Folder Include="Electrum\servers\" />
        <Folder Include="Extensions\" />
        <Folder Include="Interfaces\" />
        <Folder Include="Models\" />
        <Folder Include="Bips\" />
        <Folder Include="Accounts\" />
        <Folder Include="Storages\" />
    </ItemGroup>
    <ItemGroup>
        <Content Include="Electrum\servers\hodlwallet_mainnet.json">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <Content Include="Electrum\servers\hodlwallet_testnet.json">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <Content Include="Electrum\servers\main.json">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <Content Include="Electrum\servers\regtest.json">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <Content Include="Electrum\servers\testnet.json">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>
</Project>
